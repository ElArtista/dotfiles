! vim: set filetype=xdefaults :
! ------------------------------------------------------------------------------
! General colors
! ------------------------------------------------------------------------------
#include ".Xcolors/molokai"

! ------------------------------------------------------------------------------
! Fonts
! ------------------------------------------------------------------------------
!Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! ------------------------------------------------------------------------------
! URxvt settings
! ------------------------------------------------------------------------------
!#define URXVT_BG [90]#2b2b2b
#ifdef URXVT_BG
URxvt*background:  URXVT_BG
URxvt*borderColor: URXVT_BG
#endif
URxvt*depth: 32
URxvt*scrollBar: false
URxvt*font: xft:xos4 Terminess Powerline:pixelsize=14,xft:Wuncon Siji:size=10,xft:FontAwesome:size=10
!URxvt*letterSpace: -1
URxvt*internalBorder: 25
URxvt*colorBD: #ffffff
URxvt*cursorColor: #ff8939
URxvt*cursorColor2: #2b2b2b
URxvt*cursorBlink: 1
URxvt*dynamicColors: on
! Clickable urls
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

! ------------------------------------------------------------------------------
! XSt settings
! ------------------------------------------------------------------------------
!st.termname: st-256color
st.termname: xterm-256color
! if you do not set shell, precedence is: -e arg, utmp option, SHELL env var, /etc/passwd shell
!st.shell: /bin/bash
! The following options options can be reloaded via USR1 signal.
st.font: xos4 Terminess Powerline:pixelsize=14
st.borderpx: 20
! Available cursor values: 2 4 6 7 = █ _ | ☃ (1 3 5 are blinking versions)
st.cursorshape: 1
st.cursorthickness: 2
st.cursorblinkstyle: 0
st.cursorblinkontype: 0
st.bold_font: 0
st.xfps: 120
st.actionfps: 30
st.chscale: 1.0
st.cwscale: 1.0
st.blinktimeout: 600
st.bellvolume: 100
! This is a char that is exposed like so: `printf '\033[z'`
st.prompt_char: $
! Opacity 255 means what terminal will be not transparent, 0 - fully transparent
st.opacity: 255

! ------------------------------------------------------------------------------
! Rofi
! ------------------------------------------------------------------------------
! Enabled modes
rofi.modi: run
! Window width
rofi.width: 100%
! Number of lines
rofi.lines: 3
! Font to use
rofi.font: Monaco 18
! Row colors       'bg',    'fg',    'bgalt', 'hlbg',  'hlfg'
rofi.color-normal: #1b1d1e, #266c98, #1b1d1e, #1b1d1e, #ff0044
! Window colors    'bg',    'border','separator'
rofi.color-window: #1b1d1e, #1b1d1e, #266c98
! Location
! 1   2   3
! 8   0   4
! 7   6   5
rofi.location: 1
! Padding
rofi.padding: 30
! {X,Y}-offset relative to location
rofi.xoffset: 0
rofi.yoffset: 0
! Margin between rows
rofi.line-margin: 10
! Padding within rows
rofi.line-padding: 2
! Separator style (none, dash, solid)
rofi.separator-style: solid
