#
# Wm independent hotkeys
#

# Launch Terminal
super + Return
    urxvt

# Start launcher
super + space
    rofi -show run

# Start file explorer
super + e
    thunar

# Start web browser
super + i
    chromium

# Make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# Screenshot to clipboard
{_,ctrl +} Print
    maim { ,-s} -u --format png /dev/stdout | xclip -selection clipboard -t image/png -i

#
# Bspwm hotkeys
#

# Close bspwm
super + alt + Escape
    pkill -x panel; bspc quit

# Reload panel
super + ctrl + Escape
    pgrep panel && pkill -USR1 -x panel || panel

# Close or kill window
super + {_,shift + }w
    bspc node -{c,k}

# Cycle through layouts (monocle & tiled)
super + m
    bspc desktop -l next

# If the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# Swap the given window with the biggest one in the current desktop
super + {_,shift + } g
    bspc node -s {biggest,@brother}

#
# State/flags
#

# Set the window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Set the node flags
super + ctrl + {x,y,z}
    bspc node -g {locked,sticky,private}

#
# Focus/swap
#

# Focus the node in the given direction. If monitor is empty, focus monitor in given direction
super + {_,shift + }{h,j,k,l}
    act={f,s}; \
    dir={west,south,north,east}; \
    bspc query -N -d && bspc node -$act $dir || bspc monitor -f $dir

# Focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# Focus the next/previous node
super + {_,shift + }c
    bspc node -f {next,prev}.local

# Focus the next/prev desktop
super + bracket{left,right}
    bspc desktop -f {prev,next}

# Focus the next/prev desktop
super + bracket{left,right}
    bspc desktop -f {prev,next}

# Focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# Focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# Focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} focused:'^{1-9,10}'

# Focus monitor using arrow keys
super + {Left, Up, Right, Down}
    bspc monitor -f {west, north, east, south}

# Move window to monitor using arrow keys
super + shift + {Left, Up, Right, Down}
    bspc node -m {west, north, east, south}

#
# Preselect
#

# Preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# Preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# Move/Resize
#
# Change split ratios
super + alt + {j,k}
    bspc node -r {-,+}10

# Move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

#
# Media
#
XF86Audio{Raise,Lower}Volume
    amixer set Master 1%{+,-} unmute

XF86AudioMute
    amixer -q set Master toggle
